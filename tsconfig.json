{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "es/types",
    "downlevelIteration": true,
    "lib": ["DOM", "ES2022", "ES6", "DOM.Iterable", "ScriptHost", "ES2016.Array.Include"],
    "module": "ES2020",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "paths": {
      "three/addons/lines/*": ["./node_modules/@types/three/examples/jsm/lines/*"]
    },
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "typeRoots": ["src/types", "node_modules/@types"],
    "types": ["vitest/globals"]
  },
  "files": ["src/index.ts", "public/index.ts"],
  "include": ["src/**/*", "public/**/*"]
}
